<!--pages/addcover/addcover.wxml-->

<view class="page">

  <view class="page__hd">
    <view class="page__title">添加井盖</view>
  </view>

  <view class="page__bd">
    <view class="weui-cells__title">井盖信息</view>
    <view class="weui-cells weui-cells_after-title">

      <view class="weui-cell">
        <view class="weui-cell__bd">SN</view>
        <view class="weui-cell__ft">{{sn}}</view>
      </view>


<!-- 这里写注释
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">输入sn</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" placeholder="请输入sn" bindinput='bindSN'/>
        </view>
      </view>
       -->
    

      <view class="weui-cell">
        <view class="weui-cell__bd">纬度</view>
        <view class="weui-cell__ft">{{latitude}}</view>
      </view>

      <view class="weui-cell">
        <view class="weui-cell__bd">经度</view>
        <view class="weui-cell__ft">{{longitude}}</view>
      </view>

      <view class="weui-cell">
        <view class="weui-cell__bd">所属城市</view>
        <view class="weui-cell__ft">{{city}}</view>
      </view>

      <view class="weui-cell">
        <view class="weui-cell__bd">地址</view>
        <view class="weui-cell__ft">{{address}}</view>
      </view>

      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">井盖号码</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" placeholder="可输入井盖号码" bindinput='bindCoverNo'/>
        </view>
      </view>

    </view>
  </view>

  <view class="page__bd page__bd_spacing">
    <button class="weui-btn" type="primary" bindtap='addConfirm'>确认添加</button>
  </view>

</view>